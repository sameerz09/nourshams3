    <record id="view_project_project_filter_cleaned" model="ir.ui.view">
    <field name="name">project.project.search.only.family.filters</field>
    <field name="model">project.project</field>
    <field name="inherit_id" ref="project.view_project_project_filter"/>
    <field name="arch" type="xml">
        <!-- Remove all default filters -->
        <xpath expr="//filter" position="replace"/>
        <!-- Remove all separators -->
        <xpath expr="//separator" position="replace"/>
        <!-- Remove group by options -->
        <xpath expr="//group" position="replace"/>

        <!-- Add custom filters -->
        <xpath expr="//search" position="replace">
            <search string="Search Project">
                <!-- Keep default free text search fields -->
                <field name="name"/>


                <!-- ✅ All your family status filters -->
                <filter string="يوجد شهيد" name="has_family_martyr_yes" domain="[('has_family_martyr', '=', 'yes')]"/>
                <filter string="يوجد أسير" name="has_family_prisoner_yes" domain="[('has_family_prisoner', '=', 'yes')]"/>
                <filter string="يوجد جريح" name="has_family_injured_yes" domain="[('has_family_injured', '=', 'yes')]"/>
                <filter string="يوجد طلاب مدارس" name="has_school_students_yes" domain="[('has_school_students', '=', 'yes')]"/>
                <filter string="طلاب توقفو" name="school_attendance_all" domain="[('school_attendance_status', '=', 'all_continuing')]"/>
                <filter string="يوجد طلاب جامعات" name="has_university_students_yes" domain="[('has_university_students', '=', 'yes')]"/>
                <filter string="التعليم الجامعي توقف" name="university_attendance_stopped" domain="[('university_attendance_status', '=', 'stopped')]"/>
                <filter string="يوجد ذوي إعاقة" name="has_disabled_members_yes" domain="[('has_disabled_members', '=', 'yes')]"/>

                <!-- ✅ Skills filters -->
                <filter string="مهارة: بناء" name="skill_construction" domain="[('skill_construction','=',True)]"/>
                <filter string="مهارة: كهرباء" name="skill_electricity" domain="[('skill_electricity','=',True)]"/>
                <filter string="مهارة: تعليم" name="skill_education" domain="[('skill_education','=',True)]"/>
                <filter string="مهارة: صيانة" name="skill_maintenance" domain="[('skill_maintenance','=',True)]"/>
                <filter string="مهارة: آخر" name="skill_other" domain="[('skill_other','=',True)]"/>

                <!-- ✅ Housing status -->
                <filter string="هل تعرض المنزل للهدم" name="destroyed" domain="[('housing_damage_level', '=', 'destroyed')]"/>

                <!-- ✅ Areas -->
                <filter string="طولكرم" name="tulkarem" domain="[('post_displacement_area_selections', '=', 'tulkarem')]"/>
                <filter string="اكتابا" name="ektaba" domain="[('post_displacement_area_selections', '=', 'ektaba')]"/>
                <filter string="ذنابه" name="thanaba" domain="[('post_displacement_area_selections', '=', 'thanaba')]"/>
                <filter string="حارة السلام" name="salem_neighborhood" domain="[('post_displacement_area_selections', '=', 'salem_neighborhood')]"/>
                <filter string="العزب" name="alzoub" domain="[('post_displacement_area_selections', '=', 'alzoub')]"/>
                <filter string="عنبتا" name="anabta" domain="[('post_displacement_area_selections', '=', 'anabta')]"/>
                <filter string="بلعا" name="balaa" domain="[('post_displacement_area_selections', '=', 'balaa')]"/>
                <filter string="شويكه" name="shuweika" domain="[('post_displacement_area_selections', '=', 'shuweika')]"/>
                <filter string="كفر اللبد" name="kafr_labad" domain="[('post_displacement_area_selections', '=', 'kafr_labad')]"/>
                <filter string="دير الغصون" name="deir_ghassoun" domain="[('post_displacement_area_selections', '=', 'deir_ghassoun')]"/>
            </search>
        </xpath>
    </field>
