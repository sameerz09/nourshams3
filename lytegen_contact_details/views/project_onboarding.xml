                                                 <div id="projectSpecs" class="accordion-collapse collapse show" data-bs-parent="#projectSpecs">
                                                        <div class="accordion-body">

                                                            <!-- تنبيه أو عنوان (يمكنك إضافة عنوان هنا إذا رغبت) -->

                                                            <!-- معلومات النزوح -->
                                                            <div class="row mt-3">
                                                                <!-- تاريخ النزوح -->
                                                                <div class="col-lg-4 col-sm-12">
                                                                    <span class="header-font">تاريخ النزوح<sup class="text-danger">*</sup></span>
                                                                    <input type="date" name="displacement_date" id="displacement_date" class="form-control" required="required"/>
                                                                </div>

                                                                <!-- أسباب النزوح -->
                                                                <div class="col-lg-4 col-sm-12">
                                                                    <span class="header-font">أسباب النزوح<sup class="text-danger">*</sup></span>
                                                                    <select class="form-control js-searchable-re-roof" name="displacement_reasons" id="displacement_reasons" required="required">
                                                                        <option value=""/>
                                                                        <t t-foreach="displacement_reasons" t-as="type">
                                                                            <option t-att-value="type[0]"><t t-esc="type[1]"/></option>
                                                                        </t>
                                                                    </select>
                                                                </div>

                                                                <!-- مكان النزوح -->
                                                                <div class="col-lg-4 col-sm-12">
                                                                    <span class="header-font">مكان النزوح<sup class="text-danger">*</sup></span>
                                                                    <select class="form-control js-searchable-re-roof" name="displacement_residences" id="displacement_residences" required="required">
                                                                        <option value=""/>
                                                                        <t t-foreach="displacement_residences" t-as="type">
                                                                            <option t-att-value="type[0]"><t t-esc="type[1]"/></option>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                            <!-- حالة التهجير المتكررة -->
                                                            <div class="row mt-3">
                                                                <div class="col-lg-4 col-sm-12">
                                                                    <span class="header-font">هل تعرّضتم لأكثر من حالة تهجير؟<sup class="text-danger">*</sup></span>
                                                                    <select class="form-control js-searchable-re-roof" name="multiple_displacement_options" id="multiple_displacement_options" required="required">
                                                                        <option value=""/>
                                                                        <t t-foreach="multiple_displacement_options" t-as="type">
                                                                            <option t-att-value="type[0]"><t t-esc="type[1]"/></option>
                                                                        </t>
                                                                    </select>
                                                                </div>
                                                            </div>

                                                        </div>
                                                    </div>



                                                    <h2 class="accordion-header mt-3">
                                                        <button class="accordion-button" type="button" data-bs-target="#utilityBilling" aria-expanded="true" aria-controls="utilityBilling">
                                                            المرفقات
                                                          </button>
                                                     </h2>

                                                    <div id="utilityBilling" class="accordion-collapse collapse show" data-bs-parent="#utilityBilling">
                                                        <div class="accordion-body">

                                                            <div class="row mt-3">
                                                                <div class="col-lg-12">
                                                                    <span class="header-font">صورة هوية رب الأسرة <sup class="text-danger">*</sup></span>
                                                                    <input placeholder="Require full recent electric bill (PDF/JPG)" type="file" accept=".jpg, .jpeg, .png, .pdf" name="utility_bill[]" id="utility_bill" class="form-control mt-2 header-font" multiple="multiple" required="required"/>
                                                                </div>
                                                            </div>

                                                            <div class="row mt-3">
                                                                <div class="col-lg-12">
                                                                    <span class="header-font">صور لموقع الاقامة الحالي</span>
                                                                    <input placeholder="Ex: Title verification, mortgage statement, proof of income, driver's license front and back, green card, etc." type="file" accept=".jpg, .jpeg, .png, .pdf, .doc, .docx" name="additional_files[]" id="additional_files" class="form-control mt-2 header-font" multiple="multiple"/>
                                                                </div>
                                                            </div>
                                                            <div class="row mt-3">
                                                                <!-- وثيقة الأونروا -->
                                                                <div class="col-lg-12">
                                                                    <span class="header-font">صورة وثيقة الأونروا<sup class="text-danger">*</sup></span>
                                                                    <input type="file"
                                                                           accept=".jpg, .jpeg, .png, .pdf"
                                                                           name="unrwa_document"
                                                                           id="unrwa_document"
                                                                           class="form-control mt-2 header-font"
                                                                           required="required"/>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>









                                                    <div id="notesAdditionalInfo" class="accordion-collapse collapse show" data-bs-parent="#notesAdditionalInfo">
                                                        <div class="accordion-body">










                                                        </div>
                                                    </div>

                                                    <div class="row mt-5">
                                                        <div class="col text-center">
                                                            <button class="btn btn-md btn-success w-100" type="submit">ارسال</button>
                                                        </div>
                                                    </div>

                                             </div>
                                         </div>

                                    </form>

                                </div>
                            </div>
                       </div>
