<odoo>
  <record id="view_cancel_reason_wizard_form" model="ir.ui.view">
    <field name="name">cancel.reason.wizard.form</field>
    <field name="model">cancel.reason.wizard</field>
    <field name="arch" type="xml">
      <form string="Cancel Case">
        <group>
          <field name="cancel_reason"/>
        </group>
        <footer>
          <button name="action_confirm_cancel" string="Confirm Cancel" type="object" class="btn-primary"/>
          <button string="Close" special="cancel" class="btn-secondary"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>
