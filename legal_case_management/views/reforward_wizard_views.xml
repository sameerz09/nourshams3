<odoo>
    <record id="view_reforward_wizard_form" model="ir.ui.view">
        <field name="name">reforward.wizard.form</field>
        <field name="model">reforward.wizard</field>
        <field name="arch" type="xml">
            <form string="Re-forward Case">
                <group>
                    <field name="target_state"/>
                </group>
                <footer>
                    <button name="action_confirm_reforward" string="Confirm Re-forward" type="object" class="btn-primary"/>
                    <button string="Close" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
